<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Mon Quiz{% endblock %}</title>
    </head>
    <body>
        <nav>
            {% set uid = app.request.getSession().get('user_id') %}
           {% if app.user %}
            <a href="{{ path('app_logout') }}">DÃ©connexion</a>
            <a href="{{ path('app_change_email') }}">Changer email</a>
            <a href="{{ path('app_change_password') }}">Changer mot de passe</a>
{% else %}
    <a href="{{ path('app_login') }}">Connexion</a>
{% endif %}

        </nav>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}" style="margin: 10px 0; padding: 10px; background-color: #f0f0f0; border-left: 5px solid {% if label == 'success' %}green{% elseif label == 'error' %}red{% else %}gray{% endif %};">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <main>{% block body %}{% endblock %}</main>
    </body>
</html>
