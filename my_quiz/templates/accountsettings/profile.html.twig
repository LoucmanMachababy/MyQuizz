{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<style>
    .profile-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem;
        animation: fadeIn 0.8s ease;
    }

    .profile-header {
        background: var(--accent-gradient);
        color: white;
        padding: 3rem 2rem;
        border-radius: 24px;
        margin-bottom: 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        box-shadow: var(--card-shadow);
    }

    .profile-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }

    .profile-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1;
    }

    .profile-email {
        font-size: 1.2rem;
        opacity: 0.9;
        position: relative;
        z-index: 1;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: var(--bg-secondary);
        padding: 2rem;
        border-radius: 20px;
        text-align: center;
        box-shadow: var(--card-shadow);
        border: 1px solid var(--border-color);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--accent-gradient);
        border-radius: 20px 20px 0 0;
    }

    .stat-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--card-shadow-hover);
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 700;
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
        display: block;
    }

    .stat-label {
        color: var(--text-secondary);
        font-weight: 600;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .section {
        background: var(--bg-secondary);
        padding: 2.5rem;
        border-radius: 20px;
        box-shadow: var(--card-shadow);
        border: 1px solid var(--border-color);
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

    .section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--accent-gradient);
        border-radius: 20px 20px 0 0;
    }

    .section h2 {
        color: var(--text-primary);
        margin-bottom: 1.5rem;
        font-size: 1.75rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .badges-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .badge-card {
        border: 2px solid var(--border-color);
        border-radius: 16px;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .badge-card.obtained {
        background: var(--accent-gradient);
        color: white;
        border-color: var(--accent-color);
        transform: scale(1.02);
    }

    .badge-card.obtained::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="sparkle" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="white" opacity="0.3"/></pattern></defs><rect width="100" height="100" fill="url(%23sparkle)"/></svg>');
        opacity: 0.3;
    }

    .badge-card:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: 0 12px 30px rgba(0,0,0,0.15);
    }

    .badge-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        display: block;
    }

    .badge-name {
        font-weight: 700;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .badge-description {
        font-size: 0.9rem;
        opacity: 0.8;
        line-height: 1.4;
    }

    .badge-status {
        margin-top: 1rem;
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        display: inline-block;
    }

    .badge-card.obtained .badge-status {
        background: rgba(255,255,255,0.2);
        color: white;
    }

    .badge-card:not(.obtained) .badge-status {
        background: var(--bg-tertiary);
        color: var(--text-secondary);
    }

    .empty-badges {
        text-align: center;
        color: var(--text-muted);
        font-style: italic;
        padding: 3rem 2rem;
        background: var(--bg-tertiary);
        border-radius: 16px;
        border: 2px dashed var(--border-color);
    }

    .empty-badges::before {
        content: 'üèÜ';
        font-size: 3rem;
        display: block;
        margin-bottom: 1rem;
    }

    .quick-links {
        text-align: center;
        margin-top: 2rem;
    }

    .quick-link {
        display: inline-block;
        background: var(--accent-gradient);
        color: white;
        padding: 1rem 2rem;
        text-decoration: none;
        border-radius: 12px;
        margin: 0.5rem;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: var(--card-shadow);
    }

    .quick-link:hover {
        transform: translateY(-3px);
        box-shadow: var(--card-shadow-hover);
        color: white;
    }

    @media (max-width: 768px) {
        .profile-container {
            padding: 1rem;
        }

        .profile-header {
            padding: 2rem 1rem;
            border-radius: 20px;
        }

        .profile-header h1 {
            font-size: 2rem;
        }

        .stats-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .stat-card {
            padding: 1.5rem;
        }

        .stat-number {
            font-size: 2.5rem;
        }

        .section {
            padding: 1.5rem;
        }

        .badges-grid {
            grid-template-columns: 1fr;
        }

        .quick-link {
            display: block;
            margin: 0.5rem 0;
        }
    }
</style>

<div class="profile-container">
    <div class="profile-header">
        <h1>üë§ Mon Profil</h1>
        <p class="profile-email">{{ user.email }}</p>
    </div>

    <!-- Statistiques g√©n√©rales -->
    <div class="stats-grid">
        <div class="stat-card">
            <span class="stat-number">{{ user.points|number_format(0, ',', ' ') }}</span>
            <div class="stat-label">Points totaux</div>
        </div>
        
        <div class="stat-card">
            <span class="stat-number">{{ user.quizzesCompleted }}</span>
            <div class="stat-label">Quiz compl√©t√©s</div>
        </div>
        
        <div class="stat-card">
            <span class="stat-number">{{ user.badges|length }}</span>
            <div class="stat-label">Badges obtenus</div>
        </div>
    </div>

    <!-- Badges -->
    <div class="section">
        <h2>üèÜ Mes Badges</h2>
        
        {% if user.badges is empty %}
            <div class="empty-badges">
                <p>Aucun badge obtenu pour le moment.</p>
                <p><small>Continuez √† jouer pour en gagner !</small></p>
            </div>
        {% else %}
            <div class="badges-grid">
                {% for badge in user.badges %}
                    {% if badgeInfo[badge] is defined %}
                        <div class="badge-card obtained">
                            <span class="badge-icon">{{ badgeInfo[badge].icon }}</span>
                            <div class="badge-name">{{ badgeInfo[badge].name }}</div>
                            <div class="badge-description">{{ badgeInfo[badge].description }}</div>
                            <div class="badge-status">‚úÖ Obtenu</div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <!-- Badges disponibles -->
    <div class="section">
        <h2>üéØ Badges Disponibles</h2>
        <div class="badges-grid">
            {% for badgeKey, badge in badgeInfo %}
                <div class="badge-card {% if user.hasBadge(badgeKey) %}obtained{% endif %}">
                    <span class="badge-icon">{{ badge.icon }}</span>
                    <div class="badge-name">{{ badge.name }}</div>
                    <div class="badge-description">{{ badge.description }}</div>
                    <div class="badge-status">
                        {% if user.hasBadge(badgeKey) %}
                            ‚úÖ Obtenu
                        {% else %}
                            ‚è≥ √Ä gagner
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Liens rapides -->
    <div class="quick-links">
        <a href="{{ path('quiz_global') }}" class="quick-link">üéÆ Jouer aux Quiz</a>
        <a href="{{ path('quiz_history') }}" class="quick-link">üìä Voir l'Historique</a>
        <a href="{{ path('quiz_leaderboard') }}" class="quick-link">üèÜ Classement</a>
    </div>
</div>
{% endblock %} 